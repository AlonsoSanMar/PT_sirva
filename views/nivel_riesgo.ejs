<%- include('templates/sidebar',{estilo: '/CSS/nivel_riesgo.css', activeInicio: '', activeRiesgo: 'active', activeRecomendacion: '', activeMensajes:'', activeNoticias: '', activeCuenta: '', activeCalendario: ''})%>

            <div id="cont-principal" class="mx-auto dashboard-content px-3 pt-4">
                <h1>Progreso</h1>

                <div class="container-fluid mb-2">
                    <p id="intro-riesgo">La siguiente información esta basado en el desempeño del alumno equivalente a sus créditos actuales y trimestre de ingreso</p>
                    <div class="row">
                        <div class="col">
                            <label class="mb-2">Créditos: </label>
                          <input id="creditos_actuales" type="text" class="form-control text-center" value="<%= nuevoUsuario.creditos_actuales %>" disabled>
                        </div>
                        <div class="col">
                            <label class="mb-2">Año de Ingreso: </label>
                          <input id="anio_ingreso" type="text" class="form-control text-center" value="<%= nuevoUsuario.anio_ingreso %>" disabled>
                        </div>
                        <div class="col">
                            <label class="mb-2">Periodo </label>
                            <input id="periodo" type="text" class="form-control text-center" value="<%= nuevoUsuario.periodo %>" disabled>
                          </div>
                      </div>
                </div>

                <div id="progreso-creditos">
                    <div class="titulo-porcentaje">
                        <p class="h4 text-center mt-2 mb-0 pb-2 text-primary-emphasis border-bottom border-primary">Avance de creditos</p>
                    </div>
                    <div class="progress mt-4">
                        <div class="progress-bar" id="nivelRiesgo" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        <div class="image-container">
                        <i class="fa-solid fa-graduation-cap" id="img-riesgo"></i>
                        <div class="overlay">
                            <% if (nuevoUsuario.creditos_actuales < 472) { %>
                                <h2><%= nuevoUsuario.nombre %> <span id="creditos-resMin">( Créditos restantes mínimos: <%= 472 - nuevoUsuario.creditos_actuales %> )</span> </h2>
                            <% } else { %>
                                <h2><%= nuevoUsuario.nombre %> <span id="creditos-resMin">( Créditos restantes mínimos: 0 )</span> </h2>
                            <% } %> 
                            <p>Matricula: <%= nuevoUsuario.matricula %></p>
                        </div>
                    </div>
                    </div>
    
                    

                </div>


                <div id="progreso-anio" class="mt-3">

                    <div id="cont-progresoCircular">
                        <div class="titulo-porcentaje">
                            <p class="h4 pb-2 mb-4 text-primary-emphasis border-bottom border-primary">Porcentaje de avance estimado con respecto al trimestre de ingreso</p>
                        </div>
                        <div class="skill mt-0">
                            <div class="outer">
                                <div class="inner">
                                    <div id="number">
                                        65%
                                    </div>
                                </div>
                            </div>
        
                        <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="160px" height="160px" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="Colores basados en 'Dificultad' de trimestres">
                            <defs>
                               <linearGradient id="GradientColor" x1="100%" y1="30%" x2="60%" y2="100%">
                                  <stop offset="0%" stop-color="#7DFC7F" />
                                  <stop offset="60%" stop-color="#F0FC95" />
                                  <stop offset="100%" stop-color="#e91e63" />
                                </linearGradient>
                            </defs>
                            <circle id="circulo" cx="80" cy="80" r="70" stroke-linecap="round" />
                        </svg>
        
                        </div>
                    </div>

                    <div id="cont-info-graficas">

                        <div id="cont-progresoCircula-avance">
                            <div class="titulo-porcentaje">
                                <p class="h4 pb-2 mb-4 text-primary-emphasis border-bottom border-primary">Porcentaje de avance actual</p>
                            </div>
                            <div class="skill mt-0" style="margin-left: 35px;">
                                <div class="outer">
                                    <div class="inner">
                                        <div id="number-avance">
                                            65%
                                        </div>
                                    </div>
                                </div>
            
                            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="160px" height="160px" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-title="Porcentaje actual basado en los créditos actuales">
                                <defs>
                                   <linearGradient id="GradientColor" x1="100%" y1="30%" x2="60%" y2="100%">
                                      <stop offset="0%" stop-color="#7DFC7F" />
                                      <stop offset="60%" stop-color="#F0FC95" />
                                      <stop offset="100%" stop-color="#e91e63" />
                                    </linearGradient>
                                </defs>
                                <circle id="circulo-avance" cx="80" cy="80" r="70" stroke-linecap="round" />
                            </svg>
            
                            </div>
                        </div>
                        

                    </div>

                    
                    
                </div>

               

                <!--Mensajes correspondiente a su nivel-->

            </div>
    </div>

    

    
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm' crossorigin='anonymous'></script>
    <script src="/JS/menu_ctrl_sidebar.js"></script>
    <script src="/JS/nivel_riesgo.js"></script>
    <script src="/JS/cerrar_sesion.js"></script>
</body>
</html>