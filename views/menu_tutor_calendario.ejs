<%- include('templates/sidebar_tutor',{estilo: '/CSS/calendario_tutor.css', activeInicio: '', activeTutorados:'active', activeMensajes:''})%>

            <div id="cont-principal" class="mx-auto dashboard-content px-3 pt-4">
              <div class="d-flex justify-content-between mb-3">
                <h1>Calendario</h1>
                <button type="button" class="btn-Agendar" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="fa-solid fa-calendar-days"></i>
                    <span id="titulo-newMsj">Agendar</span>
                </button>           
              </div>     
              <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <div id="calendar">
                            <div class="fc-header-toolbar">
                              <div class="fc-header-left">
                                <button class="fc-prev-button">Anterior</button>
                                <button class="fc-next-button">Siguiente</button>
                                <button class="fc-today-button">Hoy</button>
                              </div>
                              <div class="fc-header-center">
                                <span class="fc-toolbar-title">Titulo del calendario</span>
                              </div>
                              <div class="fc-header-right">
                                <button class="fc-month-button">Mes</button>
                                <button class="fc-week-button">Semana</button>
                                <button class="fc-day-button">DÃ­a</button>
                              </div>
                            </div>
                          </div>
                          
                    </div>
                </div>
            </div>
            </div>
                
        </div>
    </div>


     <!--Modal para enviar el mensaje-->
     <div class="modal fade" id="exampleModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Agendar</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form>
                <div class="mb-3 d-none">
                  <label for="correo-tutor">Correo tutor:</label>
                  <input type="text" class="form-control" id="correo-tutor" value="<%= nuevoUsuario.correo %>">
              </div>
                <div class="mb-3">
                    <label for="eventName">Nombre del Evento:</label>
                    <input type="text" class="form-control" id="eventName">
                </div>
                <div class="mb-3">
                    <label for="eventDate">Fecha y Hora (Inicio):</label>
                    <input type="datetime-local" class="form-control" id="eventDate">
                </div>
                <div class="mb-3">
                  <label for="eventDateFinal">Fecha y Hora (Termino):</label>
                  <input type="datetime-local" class="form-control" id="eventDateFinal">
              </div>
              <div class="mb-3">
                <label for="bgColor">Color:</label>
                <input type="color" class="form-control" id="bgColor">
            </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn bg-light text-black" data-bs-dismiss="modal">Cerrar</button>
              <button type="button" class="btn bg-dark" id="agendar">Agendar</button>
            </div>
          </div>
        </div>
      </div>
      

      <!--Modal para actualizar el evento-->
     <div class="modal fade" id="modalActualiza" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Actualizar evento</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form>
              <div class="mb-3 d-none">
                <label for="correo-tutor-up">Correo tutor:</label>
                <input type="text" class="form-control" id="correo-tutor-up" value="<%= nuevoUsuario.correo %>">
            </div>
              <div class="mb-3">
                  <label for="eventNameUPD">Nombre del Evento:</label>
                  <input type="text" class="form-control" id="eventNameUPD">
              </div>
              <div class="mb-3">
                  <label for="eventDateUPD">Fecha y Hora (Inicio):</label>
                  <input type="datetime-local" class="form-control" id="eventDateUPD">
              </div>
              <div class="mb-3">
                <label for="eventDateFinalUPD">Fecha y Hora (Termino):</label>
                <input type="datetime-local" class="form-control" id="eventDateFinalUPD">
            </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn bg-danger" data-bs-dismiss="modal" id="eliminar-evento">Eliminar</button>
            <button type="button" class="btn bg-dark" id="actualizar">Actualizar</button>
          </div>
        </div>
      </div>
    </div>

    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm' crossorigin='anonymous'></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
    <script src="/JS/calendario_tutor.js"></script>
    <script src="/JS/menu_ctrl_sidebar.js"></script>
    <script src="/JS/cerrar_sesion.js"></script>
</body>
</html>